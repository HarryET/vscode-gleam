{
  "name": "gleam",
  "displayName": "Gleam",
  "description": "Support for the Gleam programming language",
  "version": "1.4.0",
  "publisher": "gleam",
  "repository": {
    "type": "git",
    "url": "https://github.com/gleam-lang/vscode-gleam"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "gleam",
        "aliases": [
          "Gleam",
          "gleam"
        ],
        "extensions": [
          ".gleam"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gleam",
        "scopeName": "source.gleam",
        "path": "./syntaxes/gleam.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "gleam",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gleam Configuration",
      "properties": {
        "gleamLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "gleamLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "configurationDefaults": {
      "[gleam]": {
        "editor.formatOnSave": true
      }
    }
  },
  "activationEvents": [
    "onLanguage:gleam"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "compile-watch": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {
    "vsce": "^1.83.0",
    "vscode-languageclient": "^7.0.0"
  }
}